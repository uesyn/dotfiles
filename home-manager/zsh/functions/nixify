if [ ! -e ./.envrc ]; then
  DOTFILES=${HOME}/src/github.com/uesyn/dotfiles
  if [ ! -d "${DOTFILES}" ]; then
    echo "# use nix ${DOTFILES}#rust" > .envrc
    echo "# use nix ${DOTFILES}#go_1_22" >> .envrc
  else
    echo "# use nix github:uesyn/dotfiles#rust" > .envrc
    echo "# use nix github:uesyn/dotfiles#go_1_22" >> .envrc
  fi
  direnv allow
fi

