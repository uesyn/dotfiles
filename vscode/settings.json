{
    "terminal.integrated.macOptionIsMeta": true,
    "files.insertFinalNewline": true,
    "editor.fontFamily": "HackGenNerd, Menlo, Monaco, 'Courier New', monospace",
    "editor.peekWidgetDefaultFocus": "editor",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Gruvbox Dark Medium",
    // Vim
    "vim.leader": "space",
    "vim.useSystemClipboard": false,
    "vim.normalModeKeyBindings": [
        // close editor window
        {
            "before": ["q", "q"],
            "commands": [
                "workbench.action.closeActiveEditor",
            ]
        },
        // toggle sidebar
        {
            "before": ["<leader>", "f", "o"],
            "commands": [
                "workbench.action.toggleSidebarVisibility",
            ],
        },
        // move right
        {
            "before": ["<S-l>"],
            "after": ["<C-w>", "l"]
        },
        // move left
        {
            "before": ["<S-h>"],
            "after": ["<C-w>", "h"]
        },
        // move up
        {
            "before": ["<S-j>"],
            "after": ["<C-j>", "j"]
        },
        // move down
        {
            "before": ["<S-k>"],
            "after": ["<C-j>", "k"]
        },

        /*** Languages ***/
        // code action
        {
            "before": ["<leader>", "l", "a"],
            "commands": [
                "editor.action.codeAction",
            ],
        },
        // peek definition
        {
            "before": ["<leader>", "l", "h"],
            "commands": [
                "editor.action.peekDefinition",
            ],
        },
        // go to definition
        {
            "before": ["<leader>", "l", "d"],
            "commands": [
                "editor.action.revealDefinition",
            ],
        },
        // go to reference
        {
            "before": ["<leader>", "l", "r"],
            "commands": [
                "editor.action.goToReferences",
            ],
        },
        // go to type definition
        {
            "before": ["<leader>", "l", "t"],
            "commands": [
                "editor.action.goToTypeDefinition",
            ],
        },
        // format
        {
            "before": ["<leader>", "l", "f"],
            "commands": [
                "editor.action.formatDocument",
            ],
        },
        // rename
        {
            "before": ["<leader>", "l", "R"],
            "commands": [
                "editor.action.rename",
            ],
        },
    ],
    "workbench.editor.enablePreview": false,
    // multi command
    "multiCommand.commands": [
        {
            "command": "my.toggleFullScreenTerminalAndFocusTerminal",
            "sequence": [
                "terminal.focus",
                "workbench.action.toggleMaximizedPanel",
            ],
        },
        {
            "command": "my.closeFolderWhenSelectingFile",
            "sequence": [
                "list.collapse",
                "list.collapse"
            ],
        },
    ],
    "redhat.telemetry.enabled": false,
    "window.zoomLevel": 2,
    "vim.mouseSelectionGoesIntoVisualMode": false,
    "search.mode": "reuseEditor",
    "dotfiles.repository": "uesyn/dotfiles",
    "dotfiles.targetpath": "~/.dotfiles",
    "dotfiles.installCommand": "~/.dotfiles/install.sh",
}
