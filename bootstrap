  info "Installing rustup-init ..."
  make_pkgx_command2 "rustup-init" "+rustup-init"
}

setup_deno() {
  info "Installing deno..."
  version=1.38.0
  make_pkgx_command2 "deno" "+deno.land=${version}"
}

setup_node() {
  info "Installing node..."
  node_version=20
  npm_version=10.2.0
  make_pkgx_command2 "node" "+node@${node_version}"
  make_pkgx_command2 "npm" "+npmjs.com@${npm_version}"
  make_pkgx_command2 "npx" "+npmjs.com@${npm_version}"
}

setup_python() {
  info "Installing python..."
  version=3.12
  make_pkgx_command2 "idle" "+python@${version}"
  make_pkgx_command2 "idle3" "+python@${version}"
  make_pkgx_command2 "python" "+python@${version}"
  make_pkgx_command2 "python3" "+python@${version}"
  make_pkgx_command2 "pydoc3" "+python@${version}"
}

setup_ruby() {
  info "Installing ruby..."
  version=3.2.2
  ruby_commands="erb irb racc rake rbs rdbg rdoc ri ruby typeprof"
  for cmd in ${ruby_commands}; do
    make_pkgx_command2 "${cmd}" "+ruby@${version}"
  done
}

setup_docker_commands() {
  info "Installing docker..."
  if [ "$(uname)" = "Darwin" ]; then
    make_pkgx_command2 "docker" "+docker"
  fi
  make_pkgx_command2 "docker-credential-ecr-login" "+github.com/awslabs/amazon-ecr-credential-helper"
}

### main ###
make_links
make_local_configs
setup_pkgx &
setup_rtx &
setup_jq &
setup_fzf &
setup_ripgrep &
wait
if [ -d ${OPT_PKGX_DIR} ]; then
  rm -rf ${OPT_PKGX_DIR}
fi
setup_neovim &
setup_yq &
setup_gh &
setup_tmux &
setup_zellij &
setup_aws &
setup_kubectl &
setup_kustomize &
setup_helm &
setup_kind &
setup_kubectx &
setup_stern &
setup_kubebuilder &
setup_kubectl_krew &
setup_conftest &
setup_opa &
setup_ghq &
setup_mc &
setup_go &
setup_rustup_init &
setup_deno &
setup_node &
setup_python &
setup_ruby &
setup_silicon &
setup_docker_commands &
wait
show_infos
